<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="VBoxPane" prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loudsheep.psio_project.frontend.controllers.forms.MACDFormulaFormController">
    <children>

        <Label text="Short EMA Period" />
        <TextField fx:id="shortEmaField" promptText="Enter a number" />

        <Label text="Long EMA Period" />
        <TextField fx:id="longEmaField" promptText="Enter a number" />

        <Label text="Signal Period" />
        <TextField fx:id="bollingerPeriodField" promptText="Enter a number" />

        <Button onAction="#handleSubmit" text="Save">
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>
